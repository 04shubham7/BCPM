{
  "version": 2,
  "env": {
    "NEXT_PUBLIC_API_BASE": "https://bcpm.onrender.com"
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "https://bcpm.onrender.com/:path*" },
    { "source": "/files/:path*", "destination": "https://bcpm.onrender.com/files/:path*" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}